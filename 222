<script>
function showCropInfo(){
  var crop=document.getElementById('cropSelect').value;
  var info=document.getElementById('cropInfo');
  if(crop){
    info.innerHTML=crop + " are currently in the growing process â€“ check back soon for harvest dates!";
  }else{
    info.innerHTML="";
  }
}
